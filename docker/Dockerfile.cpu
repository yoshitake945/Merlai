FROM python:3.11-slim

WORKDIR /app

# システム依存パッケージ
RUN apt-get update && apt-get install -y \
    build-essential \
    libsndfile1 \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# まずプロジェクトファイルをコピー
COPY . /app/

# 依存関係をインストール
RUN pip install --upgrade pip setuptools wheel
RUN pip install -e .[dev]

EXPOSE 8000

CMD ["merlai", "serve", "--host", "0.0.0.0", "--port", "8000"] 